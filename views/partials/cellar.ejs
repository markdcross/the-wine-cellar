<div class="container">
  <div class="row">
    <div class="col-12 text-center headline">
      <h1>Welcome to your personal Wine Cellar!</h1>
      <h2>Look at all those bottles sitting there...<br>
        <h3>Add to the collection, adn mark off when you enjoy a bottle!</h3>
    </div>
  </div>
<h2>Wine that is in my cellar</h2>

<ul>
  <% Wine.forEach(function(wine){ %>
    <%- include('partials/wine', {wine: wine}); %>
  <% }); %>
</ul>

<ul>
  <% Beer.forEach(function(beer){ %>
    <%- include('partials/beer', {beer: beer}); %>
  <% }); %>
</ul>

<h2>Wine that I've already enjoyed</h2>

<ul>
  {{#each wines}}
    {{#if consumed}}
      {{> wines/wine-block consumed=true}}
    {{/if}}
  {{/each}}
</ul>